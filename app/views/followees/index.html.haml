%h2= "Listing followers of #{@user.login}:"
-form_for :friend, :url => {:controller => "search", :action => "index"} do |search|
  Search Twitter
  %input{:type => "text", :name => "search"}
  %input{:type => "submit"}
%hr
-if @resp
  ="Response #{@resp}"
-form_for :enemy, :url => {:action => "unfollow"} do |unfollow|
  %table
    %tr
      %th Unfollow?
      %th Followee
      %th ID
      %th Last Tweet
    -@paged.each do |tweet|
      %tr
        %td
          %input{:type => "checkbox", :name => "#{tweet['id']}"}
        %td= link_to(tweet['screen_name'], 'http://twitter.com/'+tweet['screen_name'], :target => "_blank")  
        %td=tweet['id']
        -if tweet['status']
          %td= tweet['status']['text']
        -else
          %td This user has no tweets
  = will_paginate @paged
  %input{:type => "submit"}
%hr
= button_to "Logout", :action => "destroy", :controller => "sessions"
