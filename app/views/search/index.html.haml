-form_for :friend, :url => {:controller => "followees", :action => "follow"} do |follow|
  %br"Here are the results for your search of Twitter user names"
  %table
    %tr
      %th Follow?
      %th User
      %th Last Tweet
    -@results.each do |result|
      %tr
        %td
          %input{:type =>"checkbox", :name => "#{result['id']}"}
        %td= link_to(result['screen_name'], 'http://twitter.com/'+result['screen_name'], :target => "_blank")
        -if result['status']
          %td= result['status']['text']
        -else
          %td This user has no tweets
  %input{:type => "submit"}
